<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <style>
        table { width: 100%; border-collapse: collapse; }
        th, td { padding: 10px; border: 1px solid #ddd; text-align: left; }
        th { background-color: #f2f2f2; }
        tr:nth-child(even) { background-color: #f9f9f9; }
    </style>
</head>
<body>
    <h1><%= title %></h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Имя</th>
                <th>Оценка</th>
                <th>Дата</th>
                <th>IP</th>
                <th>Отзыв</th>
            </tr>
        </thead>
        <tbody>
            <% feedbacks.forEach(fb => { %>
            <tr>
                <td><%= fb.id %></td>
                <td><%= fb.name %></td>
                <td><%= '★'.repeat(fb.rating) %></td>
                <td><%= fb.date %></td>
                <td><%= fb.ip %></td>
                <td><%= fb.message %></td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>